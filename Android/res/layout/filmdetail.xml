<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content" android:orientation="vertical">
  
<TextView android:text="@+id/TextView01" 
android:layout_height="wrap_content" 
android:layout_width="fill_parent" 
android:paddingTop="2dip" 
android:paddingLeft="5dip" 
android:paddingBottom="2dip" 
android:id="@+id/film_title" 
style="?android:attr/listSeparatorTextViewStyle"></TextView>
<ImageView android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:layout_width="fill_parent" android:id="@+id/ImageURL"></ImageView>
<TextView android:text="@+id/TextView01" android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/film_description"></TextView>
</LinearLayout>
