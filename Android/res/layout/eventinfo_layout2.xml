<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<ScrollView android:id="@+id/scView" android:layout_height="fill_parent"
		android:layout_width="fill_parent" android:layout_y="50px"
		android:scrollbars="vertical">
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="vertical" android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:layout_weight="1">
			
			<include layout="@layout/detail_layout" />
			
			<Button android:id="@+id/call_button" android:text="Call Cinequest Ticketing Line"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_below="@+id/tSpot9" android:layout_marginTop="5px" />

			<ListView android:layout_width="wrap_content"
				android:layout_height="200dip" android:id="@+id/ScheduleList"
				android:layout_below="@+id/call_button">
			</ListView>
		</LinearLayout>
	</ScrollView>
</LinearLayout>